{
    "job": {
        "type": "Microsoft.Batch/batchAccounts/jobs",
        "properties": {
            "id": "<<_JOB_NAME_>>",
            "poolInfo": {
                "poolId": "<<_POOL_NAME_>>"
            },
            "taskFactory": {
                "type": "parametricSweep",
                "parameterSets": [
                    {
                        "start": 1,
                        "end": 100,
                        "step": 1
                    }
                ],
                "repeatTask": {
                  "commandLine": "/bin/bash -c 'run task here or /run/task/here.sh'"
                }
            }
        }
    }
}
